<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"


    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned|number"
        android:hint="@string/to"
        android:id="@+id/eTo"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@color/dodgerblue"
        android:textSize="30sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned|number"
        android:hint="@string/subject"
        android:id="@+id/eSubject"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@color/dodgerblue"
        android:textSize="30sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="@string/message"
        android:id="@+id/eMessage"
        android:background="@color/dodgerblue"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:gravity="top"
        />
    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="0.5">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@color/dodgerblue"
             android:orientation="vertical"
             >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGr">
             <RadioButton
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:text="@string/box0"
                 android:textColor="@color/white"
                 android:textSize="30sp"
                 android:onClick="onRadioButtonClicked"
                 android:id="@+id/radio0" />
             <RadioButton
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:textSize="30sp"
                 android:text="@string/box1"

                 android:onClick="onRadioButtonClicked"
                 android:textColor="@color/white"
                 android:id="@+id/radio1" />
             <RadioButton
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:textSize="30sp"
                 android:layout_weight="1"
                 android:text="@string/box2"
                 android:textColor="@color/white"
                 android:onClick="onRadioButtonClicked"

                 android:id="@+id/radio2" />
             <RadioButton
                 android:layout_width="wrap_content"
                 android:layout_height="0dp"
                 android:textColor="@color/white"
                 android:layout_weight="1"
                 android:textSize="30sp"
                 android:text="@string/box3"
                 android:onClick="onRadioButtonClicked"
                 android:id="@+id/radio3" />

        </RadioGroup>




         </LinearLayout>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="0.5"
             android:background="@color/dodgerblue"
             android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_gravity="center"
        android:background="@color/dodgerblue"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:id="@+id/bSend"/>


         </LinearLayout>
</LinearLayout>

    </LinearLayout>
